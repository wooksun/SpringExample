<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student" class="com.tjoeun.springDI_05_xml_namespace.Student">
		<constructor-arg value="최진욱"/>
		<constructor-arg value="25"/>
		<constructor-arg>
			<list>
				<value>축구</value>
				<value>게임</value>
				<value>영화보기</value>
			</list>
		</constructor-arg>
		<property name="weight" value="78"></property>
		<property name="height" value="178"></property>
	</bean>
	
	<bean id="student3" class="com.tjoeun.springDI_05_xml_namespace.Student">
		<constructor-arg value="최진욱1"/>
		<constructor-arg value="25"/>
		<constructor-arg>
			<list>
				<value>축구</value>
				<value>게임</value>
				<value>영화보기</value>
			</list>
		</constructor-arg>
		<property name="weight" value="83"></property>
		<property name="height" value="185"></property>
	</bean>
	
	<bean id="student4" class="com.tjoeun.springDI_05_xml_namespace.Student">
		<constructor-arg value="임꺽정"/>
		<constructor-arg value="55"/>
		<constructor-arg>
			<list>
				<value>농구</value>
				<value>야구</value>
				<value>음악감상</value>
			</list>
		</constructor-arg>
		<property name="weight" value="80"></property>
		<property name="height" value="188"></property>
	</bean>
	
	<bean id="studentInfo" class="com.tjoeun.springDI_05_xml_namespace.StudentInfo">
		<!-- <constructor-arg ref="student"/> -->
		<property name="student" ref="student4"></property>
	</bean>

</beans>
